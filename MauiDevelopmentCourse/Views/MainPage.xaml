<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MauiDevelopmentCourse.Models"
             xmlns:viewModels="clr-namespace:MauiDevelopmentCourse.ViewModels"
             x:DataType="viewModels:CarListViewModel"
             x:Class="MauiDevelopmentCourse.MainPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="*,100" ColumnDefinitions="*,auto">
          <CollectionView ItemsSource="{Binding Cars}" Grid.ColumnSpan="2" SelectionMode="None">
              <CollectionView.ItemTemplate >
                  <DataTemplate x:DataType="model:Car">
                      <Border HeightRequest="90">
                          <HorizontalStackLayout Spacing="5" Padding="10">
                              <Label Text="{Binding Brand}"/>
                              <Label Text="{Binding Model}"/>
                          </HorizontalStackLayout>
                      </Border>
                  </DataTemplate>
              </CollectionView.ItemTemplate>
          </CollectionView>
        <Button Text="Fetch List" Command="{Binding GetCarsCommand}" IsEnabled="{Binding isNotLoading}" Grid.Row="1" Grid.Column="0"/>
    </Grid>

</ContentPage>
