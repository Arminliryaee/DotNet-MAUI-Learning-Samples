<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MauiDevelopmentCourse.Models"
             xmlns:viewModels="clr-namespace:MauiDevelopmentCourse.ViewModels"
             x:DataType="viewModels:CarListViewModel"
             x:Class="MauiDevelopmentCourse.MainPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="*,auto" ColumnDefinitions="*,auto">

        <RefreshView 
            Grid.ColumnSpan="2"
            Command="{Binding GetCarsCommand}"
            IsRefreshing="{Binding IsRefreshing}"
            >
            <CollectionView ItemsSource="{Binding Cars}" SelectionMode="None">
                <CollectionView.ItemTemplate >
                    <DataTemplate x:DataType="model:Car">
                        <Border HeightRequest="90">
                            <HorizontalStackLayout Spacing="5" Padding="10">
                                <Label Text="{Binding Brand}"/>
                                <Label Text="{Binding Model}"/>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="1" Command="{Binding GetCarsCommand}" IsEnabled="{Binding isNotLoading}"/>

    </Grid>

</ContentPage>
